{
    "name": "@trigo/design-system",
    "version": "0.7.1",
    "description": "trigo design system",
    "main": "dist/designsystem.cjs.js",
    "module": "dist/designsystem.esm.js",
    "sideEffects": false,
    "repository": "git@github.com:trigo-at/design-system.git",
    "author": "trigo GmbH <office@trigo.at>",
    "license": "MIT",
    "engines": {
        "node": ">=9.0.0"
    },
    "scripts": {
        "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
        "precommit": "lint-staged",
        "prettify": "prettier --write 'src/**/*.{js,jsx}'",
        "test": "NODE_ENV=test jest --coverage --setupTestFrameworkScriptFile=./jest.setup.js",
        "build": "rollup -c",
        "watch": "rollup -c -w",
        "lint": "eslint .",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook -o ./docs -s ./assets",
        "prepare": "rm -rf ./dist && yarn build"
    },
    "lint-staged": {
        "src/**/*.{js,jsx}": [
            "prettier --write",
            "eslint .",
            "git add"
        ]
    },
    "devDependencies": {
        "@storybook/addon-actions": "^3.4.7",
        "@storybook/addon-info": "^3.4.7",
        "@storybook/addon-links": "^3.4.7",
        "@storybook/addon-options": "^3.4.7",
        "@storybook/addons": "^3.4.7",
        "@storybook/react": "^3.4.7",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-jest": "^23.0.1",
        "babel-loader": "^7.1.4",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-plugin-styled-components": "^1.5.1",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "babel-runtime": "^6.26.0",
        "camelcase": "^5.0.0",
        "cross-env": "^5.1.6",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-react-trigo": "^5.5.6",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-prettier": "^2.6.0",
        "file-loader": "^1.1.11",
        "husky": "^0.14.3",
        "jest": "^23.1.0",
        "jest-styled-components": "^5.0.1",
        "lint-staged": "^7.1.3",
        "prettier": "^1.13.5",
        "prop-types": "^15.6.1",
        "react": "^16.4.0",
        "react-dom": "^16.4.0",
        "react-test-renderer": "^16.4.0",
        "rollup": "^0.60.2",
        "rollup-plugin-babel": "^3.0.4",
        "rollup-plugin-json": "^3.0.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "styled-components": "^3.3.2",
        "styled-system": "^2.2.7",
        "svgi": "^1.1.0"
    },
    "peerDependencies": {
        "prop-types": "^15.6.1",
        "react": "^16.3.2",
        "styled-components": "^3.2.6",
        "styled-system": "^2.2.5"
    },
    "jest": {
        "testMatch": [
            "**/__tests__/**/*.js?(x)",
            "**/?(*.)(spec|test|specs).js?(x)"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/**/?(*.)(stories).js?(x)"
        ]
    }
}
